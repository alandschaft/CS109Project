  <brief_summary>
    <textblock>
      Pilot study to evaluate efficacy of Keppra (levetiracetam) for seizure control in patients
      with alcohol related seizures.
    </textblock>
  </brief_summary>
  <overall_status>Not yet recruiting</overall_status>
  <start_date>February 2008</start_date>
  <primary_completion_date type="Anticipated">July 2008</primary_completion_date>
  <phase>Phase 2</phase>
  <study_type>Interventional</study_type>
  <study_design>Endpoint Classification: Efficacy Study, Intervention Model: Single Group Assignment, Masking: Open Label, Primary Purpose: Treatment</study_design>
  <primary_outcome>
    <measure>Decreased seizures</measure>
    <time_frame>1, 2, 4, 8 weeks</time_frame>
    <safety_issue>No</safety_issue>
  </primary_outcome>
  <number_of_arms>1</number_of_arms>
  <enrollment type="Anticipated">20</enrollment>
  <condition>Seizure, Alcohol Related</condition>
  <arm_group>
    <arm_group_label>1</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>levetiracetam</intervention_name>
    <description>2 gram iv load, 500mg bid</description>
    <arm_group_label>1</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  No trauma

          -  Not pregnant

          -  No other cause for seizure (hypoglycemia, CNS causes, trauma)

          -  Good family support

          -  Working telephone contact

        Exclusion Criteria:

          -  Pregnancy

          -  Renal failure (creatine &gt; 2mg/dl

          -  Fever or illness

          -  Hypotension

          -  Any trauma
      </textblock>
    </criteria>
    <gender>Both</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>64 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
